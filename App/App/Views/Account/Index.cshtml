@model App.ViewModels.UserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<style>
    body{
    background-color: #C0DCEC;
    }
    .container{
    
    }
    nav{
         height: 45px;
         }
        .floating-button {
          text-decoration: none;
          display: inline-block;
          width: 140px;
          height: 45px;
          line-height: 45px;
          border-radius: 45px;
          margin: 10px 20px;
          font-family: 'Montserrat', sans-serif;
          font-size: 11px;
          text-transform: uppercase;
          text-align: center;
          letter-spacing: 3px;
          font-weight: 600;
          color: #524f4e;
          background: white;
          box-shadow: 0 8px 15px rgba(0, 0, 0, .1);
          transition: .3s;
        }
        .floating-button:hover {
          background: #60bcdc;
          box-shadow: 0 15px 20px #a4dfed;
          color: white;
          transform: translateY(-7px);
        }
             .btn {
                  position: relative;
                  overflow: hidden;
                  z-index: 1;
                  padding: 10px 40px;
                  margin: 0 20px;
                  font-family: 'Montserrat Alternates', sans-serif;
                  font-weight: 600;
                  line-height: 30px;
                  color: white;
                  font-size: 15px;
                  text-transform: uppercase;
                  background: #60bcdc ;
                  border-width: 0;
                  box-shadow: 5px 5px 0 #145DA0;
                  outline: none;
                  cursor: pointer;
                  transition: 1.5s;
               }
               .btn:before, .btn:after {
                  content: "";
                  position: absolute;
                  height: 200px;
                  left: -50%;
                  margin-top: -100px;
                  top: 50%;
                  width: 200px;
                  border-radius: 50%;
                  opacity: 0.3;
                  z-index: -1;
                  transform: scale(0);
               }
               .btn:before {
                  background: #a4dfed;
                  transition: .8s ease-out;
               }
               .btn:after {
                  transition: .4s ease-in .3s;
               }
               .btn:hover {
                  color: #145DA0;
               }
               .btn:hover:before, .btn:hover:after {
                  opacity: 1;
                  transform: scale(4);
               }
</style>
<body>
 <div >
        
     <div class="container" style="display: flex">
         <div style="margin-top: 30px;">
             <h1 class="display-4" style="margin-bottom: 20px; color: white">Account info</h1>
             <div class="form-group">

                 <input style="border-radius: 12px; width: 350px " class="form-control" placeholder="@Model.Nickname" readonly>
             </div>

             <div class="form-group">
                 <input style="border-radius: 12px; width: 350px " class="form-control" placeholder="@Model.Email" readonly>
             </div>
             
             <a href='@Url.Action("EditPassword")' >
                 <h6 style="color:#145DA0; margin-top: 10px">Change password</h6>
             </a>
             <div>
                 <a href='@Url.Action("EditUserData")' >
                     <div class="btn">Edit</div>
                 </a>
                 </div>

             
             <div>
                 <a href='@Url.Action("LogOut")' >
                     <div class="btn" style="background-color: #C0DCEC; margin-top: 100px">Log out</div>
                 </a>
                 </div>
         </div>
         
                 <div class="card mb-4 rounded-3 shadow-sm" style="width: 20rem; margin-left: 200px; margin-top: 60px">
                   <div class="card-header py-3">
                     <h4 class="my-0 fw-normal">Get PRO</h4>
                   </div>
                     <div class="card-body">
                         
                         <h1 class="card-title pricing-card-title">$1599<small class="text-muted fw-light">/month</small></h1>
                         <strike style="color: grey;">$2000/month</strike>
                         <ul class="list-unstyled mt-3 mb-4">
                             <li>Cute cat pictures on every page</li>
                             <li>10+ projects</li>
                             <li>10+ users in project</li>
                             <li>10 GB of storage</li>

                         </ul>
                         <a href="#"  class="floating-button">Get started</a>
                     </div>
                 </div>
               
     </div>
 </div>
    
</body>
