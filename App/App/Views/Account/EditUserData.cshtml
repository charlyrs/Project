@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<style>
    body{
    background-color: #60bcdc;
    }
    .container{
    align-content: center;
    }
    nav{
         height: 45px;
         }
</style>
<body>
 <div >
       <form method="post" > 
       <div class="container" style="width: 300px; margin-top: 20px">
           <h1 style="margin-bottom: 20px; color: white">Edit</h1>
           <div class="form-group">

               <textarea style="border-radius: 12px; " class="form-control" cols="20"  placeholder="@Model.Nickname" name="username" >@Model.Nickname</textarea>
           </div>

           <div class="form-group">
               <textarea style="border-radius: 12px; " type="email" cols="20" class="form-control" placeholder="@Model.Email" name="email">@Model.Email</textarea>
           </div>

           <button style="background-color: #C0DCEC; width: 200px; border-color: darkturquoise; border-radius: 12px " type="submit" class="btn btn-primary">Submit</button>
       </div>
       </form>
    </div>
</body>
