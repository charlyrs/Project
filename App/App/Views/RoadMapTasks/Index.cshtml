@model App.ViewModels.RMStepViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<style >
  body{
  background-color: #60bcdc;
  
  color: white;
  }
  text {
  color: white;
  }
  .container {
         display: flex;
        
         
     }
     nav{
     height: 45px;
     }
  
  
</style>
<h1 class="display-4">@Model.Title</h1>
<div class="container" >
    <div class="mycontainer" style="margin-top: 20px;">
        
        <div class="container">
            @foreach (var task in Model.Tasks)
            {
                <div class="card" style="width: 12rem; margin-left: 15px">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #60bcdc">@task.Title</h5>
                            
                    </div>
                </div>

            }
        </div>

    </div>
</div>
