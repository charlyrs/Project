@model App.ViewModels.UserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<style >
    body{
    background-color: #60bcdc ;
    color: white;
    size: landscape;
    
   }
   
   text {
   color: white;
   }
   form{
   width: 650px;
   }
   .container{
   display: flex;
   
   
   }
   nav{
        height: 45px;
        }
        .pills {
          margin-left: 0;
          width: 700px;
          list-style: none;
          counter-reset: li;
          font-family: calibri;
        }
        .pills li {
          padding: 10px 0;
          position: relative;
          left: 1.5em;
          margin-bottom: 0.75em;
          padding-left: 1em;
          background: #D4F1F4;
          
        }
        .pills li:before {
          padding: 10px 0;
          position: absolute;
          top: 0;
          bottom: 0;
          left: -1.5em;
          width: 1.875em;
          text-align: center;
          color: #145DA0;;
          font-weight: bold;
          background: #145DA0;
          border-bottom-left-radius: 70em;
          border-top-left-radius: 70em;
          counter-increment: li;
          content: counter(li);
        }
  .pills li:hover{
            transform: scale(1.05);
         box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
       }
  
</style>

<body>
<div class="container" style="margin-top: 19px">
        

    <ol class="pills">
        @foreach (var n in Model.Notifications)
        {
            
            <li style="margin-top: 10px">
                <a href='@Url.Action("RedirectController", new {path = n.Link})'>

                    <h6 style="color: #145DA0 ">@n.Text</h6>
                </a>
            </li>

               

        }
    </ol>
    <a href='@Url.Action("ClearNotifications")'>
        <button type="submit"> Clear notifications</button>
    </a>
    
</div>
</body>