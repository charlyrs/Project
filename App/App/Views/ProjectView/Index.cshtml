@model App.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Projects";
    Layout = "_Layout";
}

<style >
  body{
  background-color: #60bcdc ;
  color: white;
  
  }
  text {
  color: white;
  }
  .container {
         display: flex;
         justify-content: center;
     }
     
  
  
</style>

<body >
<div class="container" style="margin-top: 10px">


    @foreach (var column in Model.Columns)
    {
        <div class="card" style="width: 300px; border-radius: 12px; margin-left: 10px; ">
            <div class="card-body">

                <h5 class="card-title" style="color: #60bcdc;">@column.Title</h5>
                @using (Html.BeginForm("Index", "AddTask", new {columnId = column.Id}, FormMethod.Post))
                {
                    <div class="form-group" style="margin-top: 10px; ">

                        <input style="border-radius: 12px;  height: 35px" type="text" name="title" class="form-control" placeholder="Add task" >

                    </div>
                }
                @foreach (var task in column.Tasks)
                {
                    <li>
                        <h6 style="color:#60bcdc;">@task.Title</h6>
                    </li>
                }


            </div>
        </div>
    }
    
</div>
<a href='@Url.Action("ProjectInfo")'>
    <button style="background-color: #a4dfed; margin-top: 20px; margin-left: 50px; width: 200px; border-color: #a4dfed; border-radius: 12px " type="submit" class="btn btn-primary">Project Info</button>
</a>
</body>
<script>
$('#myModal').on('shown.bs.modal', function () {
  $('#myInput').trigger('focus')
})
</script>