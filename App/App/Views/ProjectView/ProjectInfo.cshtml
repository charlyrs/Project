
@model App.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Project info";
    Layout = "_Layout";
}
<style >
    body{
    background-color:  #C0DCEC;
    color: white;
    size: landscape;
    
   }
   
   text {
   color: white;
   }
   form{
   width: 400px;
   }
   .container {
       display: flex;
   }
   nav{
        height: 45px;
        }
  
</style>

<div class="container"  style="margin-top: 20px; "  >
    
    <div >
        <h1 class="display-3" style="margin-bottom: 20px">@Model.Title</h1>
        <h3 style="margin-bottom: 20px">@Model.Description</h3>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title" style="color: #60bcdc">Users</h5>
                @foreach (var user in Model.Users)
                {
                    
                    <li class="list-group-item" style="color: #60bcdc">@user.Nickname</li>
                }
                @if (Model.BossRole)
                {
                    <h7 style="color: @ViewBag.messageColor; margin-top: 15px; margin-left: 10px">@ViewBag.userMessage</h7>
                    @using (Html.BeginForm("AddUserToProject", "ProjectView", FormMethod.Post))
                    {
                        <div class="form-group" style="margin-top: 10px; ">

                            <input style="border-radius: 12px; width: 15rem;  height: 35px" type="text" name="username" class="form-control" placeholder="Add user">

                        </div>
                    }
                }
           
            </div>
        </div>
            
      
        
    </div>
    @*
    <img src="https://www.pinclipart.com/picdir/big/67-672993_asana-timeline-asana-timeline-asana-timeline-asana-illustration.png" width="400">
    *@
    <img style="margin-left: 200px" src="https://fiai.azniirkh.ru/assets/img/why-us.png" width="600">
</div>
<div>
     <button style="background-color: #60bcdc; margin-top: 15px; margin-left: 80px; width: 200px; border-radius: 12px; border-color:#C0DCEC" type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                  Leave the project
                </button>
</div>
<div >
  <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
              <div class="modal-header" style="background-color: #a4dfed; ">
                      <h5 class="modal-title" id="staticBackdropLabel">Leave the project</h5>
                     
                    </div>
              <form method="post">
                  <div class="modal-body">
                      <h6 style="color: black "> Are you sure you want to leave the project? </h6>

                  </div>
                  <div class="modal-footer" >
                      <button style=" background-color:lightgrey ;width: 150px; border-radius: 12px; border-color: white" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                     
                      <form method="post">
                          <button style="background-color: #60bcdc; width: 150px; border-radius: 12px; border-color:#C0DCEC" type="submit" class="btn btn-primary">Leave </button>
                      </form>
                    
                      <form method="post">
                     </form>
  
                  </div>
              </form>
          </div>
      </div>
  </div>  
</div>
<script>
$('#myModal').on('shown.bs.modal', function () {
  $('#myInput').trigger('focus')
})
</script>